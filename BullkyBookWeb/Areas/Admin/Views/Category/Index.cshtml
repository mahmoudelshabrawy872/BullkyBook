@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    
    <div class="row pt-4">
        <div class=" col-6">
            <h2 class="text-primary ">
                Category
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary  " style="width:220px">
                <i class="bi bi-plus-circle"></i>
                   Creat New Category
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped  " style="width: 100%">
        <thead>
            <tr>
                <th>
                    Category Id
                </th>

                <th>
                    Category Name
                </th>
                <th>

                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.id
                    </td>
                    <td>
                        @obj.name
                    </td>
                    <td>
                       <div class="w-75 btn-group" role="group">
                           <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.id" >
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.id">
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </a>
                           
                       </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>


</div>

